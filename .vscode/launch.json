    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "type": "docker",
            "request": "launch",
            "name": "Docker: Run",
            "dockerfile": "Dockerfile",
            "contextPath": "${workspaceFolder}",
            "composeLaunchAction": "launchDefaultContainer",
            "composeFile": "docker-compose.yml"
        },
        {
            "type": "dockerfile",
            "request": "launch",
            "name": "Docker: Build",
            "dockerfile": "Dockerfile",
            "contextPath": "${workspaceFolder}"
        }
    ]
}